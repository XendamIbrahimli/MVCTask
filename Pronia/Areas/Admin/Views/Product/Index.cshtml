@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int Id = 1;
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
        <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary ml-auto">Create Product</a>
    </div>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">CostPrice</th>
            <th scope="col">SellPrice</th>
            <th scope="col">Quantity</th>
            <th scope="col">Category</th>
            <th scope="col">Created Time</th>
            <th colspan="3" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(Id++)</th>
                <td><img src="~/imgs/products/@item.CoverImage" width="50" /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CostPrice</td>
                <td>@item.SellPrice</td>
                <td>@item.Quantity</td>
                <td>@item.Category?.Name</td>
                <td>@item.CreatedTime</td>
                <td>
                    <a class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                </td>
                @if (!item.IsDeleted)
                {
                    <td>
                        <a class="btn btn-warning" asp-action="Hide" asp-controller="Product" asp-route-id="@item.Id">Hide</a>
                    </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-secondary" asp-action="Show" asp-controller="Product" asp-route-id="@item.Id">Show</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
