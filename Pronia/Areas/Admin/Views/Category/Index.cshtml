@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int Id = 1;
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
        <a asp-action="Create" asp-controller="Category" class="btn btn-outline-primary ml-auto">Create Product</a>
    </div>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Created Time</th>
            <th colspan="3" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(Id++)</th>
                <td>@item.Name</td>
                <td>@item.CreatedTime</td>
                <td>
                    <a class="btn btn-success" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Hide" asp-controller="Category" asp-route-id="@item.Id">Hide</a>
                </td>
            </tr>
        }
    </tbody>
</table>


